              }
            }
          },
          "is_new_graduate": {
            "type": "boolean"
          },
          "note": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
                "search_analyzer": "ja_ngram_search_analyzer",
                "analyzer": "ja_ngram_index_analyzer"
              }
            }
          }
        }
      },
      "fee_per_hour_in_yen": {
        "type": "integer"
      },
      "rating": {
        "type": "double"
      }
    }
  }
}
