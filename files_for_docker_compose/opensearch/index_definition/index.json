{
  "settings": {
    "analysis": {
      "char_filter": {
        "normalize": {
          "type": "icu_normalizer",
          "name": "nfkc",
          "mode": "compose"
        }
      },
      "tokenizer": {
        "ja_kuromoji_tokenizer": {
          "mode": "search",
          "type": "kuromoji_tokenizer",
          "discard_compound_token": true
        },
        "ja_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 2,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ja_index_synonym": {
          "type": "synonym",
          "lenient": false,
          "synonyms": [
            
          ]
        },
        "ja_search_synonym": {
          "type": "synonym_graph",
          "lenient": false,
          "synonyms": [

          ]
        }
      },
      "analyzer": {
        "ja_kuromoji_index_analyzer": {
          "type": "custom",
          "char_filter": [
            "normalize"
          ],
          "tokenizer": "ja_kuromoji_tokenizer",
          "filter": [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "ja_index_synonym",
            "cjk_width",
            "ja_stop",
            "kuromoji_stemmer",
            "lowercase"
          ]
        },
        "ja_kuromoji_search_analyzer": {
          "type": "custom",
          "char_filter": [
            "normalize"
          ],
          "tokenizer": "ja_kuromoji_tokenizer",
          "filter": [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "ja_search_synonym",
            "cjk_width",
            "ja_stop",
            "kuromoji_stemmer",
            "lowercase"
          ]
        },
        "ja_ngram_index_analyzer": {
          "type": "custom",
          "char_filter": [
            "normalize"
          ],
          "tokenizer": "ja_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "ja_ngram_search_analyzer": {
          "type": "custom",
          "char_filter": [
            "normalize"
          ],
          "tokenizer": "ja_ngram_tokenizer",
          "filter": [
            "ja_search_synonym",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict", 
    "properties": {
      "user_account_id": {
        "type": "long"
      },
      "careers": {
        "type": "nested",
        "properties": {
          "career_id": {
            "type": "long"
          },
          "company_name": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
                "search_analyzer": "ja_ngram_search_analyzer",
                "analyzer": "ja_ngram_index_analyzer"
              }
            }
          },
          "department_name": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
                "search_analyzer": "ja_ngram_search_analyzer",
                "analyzer": "ja_ngram_index_analyzer"
              }
            }
          },
          "office": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
                "search_analyzer": "ja_ngram_search_analyzer",
                "analyzer": "ja_ngram_index_analyzer"
              }
            }
          },
          "career_start_date": {
            "type": "date"
          },
          "career_end_date": {
            "type": "date"
          },
          "contract_type": {
            "type": "keyword"
          },
          "profession": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
                "search_analyzer": "ja_ngram_search_analyzer",
                "analyzer": "ja_ngram_index_analyzer"
              }
            }
          },
          "annual_income_in_man_yen": {
            "type": "integer"
          },
          "is_manager": {
            "type": "boolean"
          },
          "position_name": {
            "type": "text",
            "search_analyzer": "ja_kuromoji_search_analyzer",
            "analyzer": "ja_kuromoji_index_analyzer",
            "fields": {
              "ngram": {
                "type": "text",
